@{
    ViewData["Title"] = "Inicio";
}

<div id="wrapper">
  <div id="content-wrapper">
    <div class="container-fluid">
      <h1 class="mb-4">Ventas</h1>

      <div class="row">

      <div class="card mb-3 p-0 mx-1 col-4">
          <div class="card-header bg-primary text-white">
            <i class="fa fa-table"></i>
            Cargar producto
          </div>
          <div class="card-body">
            <div class="table-responsive">
            <form>
              <div>
                <div class="form-group">
                  <label class="form-label" >Selecciona un producto</label>
                  <select id="product-selector" data-live-search="true" class="selectpicker form-control text-primary" required>
                    <option disabled selected>Por favor selecciona un producto</option>
                    @foreach(var e in Model)
                    {
                      <option value="@e.Id">@e.Descripcion</option>
                    }
                  </select>
                </div>
                <div class="form-group my-2">
                  <label>Cantidad</label>
                  <input id="quantity" class="form-control" type="number" value="1" min="1"/>
                </div>
                <div class="form-group">
                  <label>Costo</label>
                  <h5 id="lbl-cost">$00</h5>
                </div>
              </div>
              <div class="modal-footer flex flex-row">
                <button class="btn btn-secondary" id="btn-cancelar" type="button">Cancelar</button>
                <input type="button" class="btn btn-primary" id="btn-agregar" value="Agregar"/>
              </div>
            </form>
            </div>
          </div>
        </div>

        <div class="card mb-3 p-0 mx-1 col-7">
          <div class="card-header bg-primary text-white">
            <i class="fa fa-table"></i>
            Venta
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th> Producto </th>
                    <th> Precio </th>
                    <th> Cantidad </th>
                    <th> Importe </th>
                  </tr>
                </thead>
                <tfoot>
                    <th> Producto </th>
                    <th> Precio </th>
                    <th> Cantidad </th>
                    <th> Importe </th>
                </tfoot>
                <tbody id="products-tb"></tbody>
              </table> 
            </div>
            <h5 id="lbl-total">Total $0</h5>
            <input type="button" class="btn btn-primary" id="btn-procesar" value="Procesar"/>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script src="/js/index.js"></script>
}

<div class="d-none" id="products">
@foreach(var e in Model)
  {
    <option data-id="@e.Id" data-desc="@e.Descripcion" data-stock="@e.Lote" data-price="@e.Precio"></option>
  }
</div>