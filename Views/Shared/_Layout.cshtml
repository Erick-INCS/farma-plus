<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmaplus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="row h100strict">
      <div class="col-lg-2 col-3 l-nav">
        <nav class="navbar navbar-light bg-light flex-column h100strict jc-none">
          <a class="navbar-brand mt-3" href="/">Farma Plus</a>
          <nav class="nav nav-pills flex-column mt-3">
            @if (User.Identity.IsAuthenticated) {
              <a class="nav-link" href="/">Inicio</a>
              @if (ViewBag.admin) {
                <a class="nav-link" href="/Users">Usuarios</a>
              }
              <a class="nav-link" href="/Productos">Catalogo</a>
              <!-- /Identity/Account/Register?returnUrl=%2F -->
              <!-- <a class="nav-link" href="/Clientes">Clientes</a> -->
              <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-primary">Salir</button>
              </form>
            }
          </nav>
          @if (User.Identity.IsAuthenticated) {
            <div class="mt-5 align-bottom">
              Usuario: <br>
              @User.Identity.Name
            </div>
          }
        </nav>
      </div>

      <div class="col-lg-10 col-9 offset-3 offset-lg-2 sub-body">
          <main role="main" class="pb-3 mt-5 container">
              @RenderBody()
          </main>
          <div>
            <!-- br /><br /><br />
          <footer>
              <div className="container my-auto">
                    <div className="copyright text-center my-auto">
                        <br /><br /><br />
                        <span>Copyright &copy; 2021 <a href="#">Erick Arroyo & Francisco Dias</a> Todos los derechos
                            reservados.</span>
                        <br /><br /><br />
                    </div>
                </div>
            </footer-->
          </div>
      </div>
      </div>
  <div/>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
